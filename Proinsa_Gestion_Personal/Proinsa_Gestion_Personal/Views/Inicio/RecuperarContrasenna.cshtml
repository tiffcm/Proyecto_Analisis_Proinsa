
@{
    ViewBag.Title = "RecuperarContrasenna";
    Layout = "~/Views/Shared/_Layout_Inicio.cshtml";
}

<!-- Login 9 - Bootstrap Brain Component -->
<div class="login_container">
    <div class="login_align">
        <section class="bg-primary py-3 py-md-5 py-xl-8">
            <div class="container">
                <div class="row gy-4 align-items-center">
                    <div class="col-12 col-md-6 col-xl-5-recuperar">
                        <div class="card border-0 rounded-4">
                            <div class="card-body p-3 p-md-4 p-xl-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-4">
                                            <div class="img_pos">
                                                <img class="mb-4 img_pos img_logo_recuperar" loading="lazy" src="~/Estilos/images/Logo_Nuevo.png" alt="Proinsa Logo" />
                                            </div>                                            
                                            <h3 style="text-align:center;">Recuperar Contraseña</h3>
                                        </div>
                                    </div>
                                </div>
                                @using (Html.BeginForm("IniciarSesion", "Inicio"))
                                {
                                    <div class="row gy-3 overflow-hidden">
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                <label for="email" class="form-label">Correo electrónico</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <input type="submit" id="btn-inicio" name="btn-inicio" class="btn btn-primary btn-lg" value="Recuperar Correo" onclick="Login()">
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-12">
                                        <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
                                            <a href="#!" onclick="Login()">Volver al login</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="~/Estilos/js/pruebas.js"></script>