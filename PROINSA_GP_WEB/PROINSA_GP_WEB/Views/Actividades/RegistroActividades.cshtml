@model PROINSA_GP_WEB.Entidad.Actividad
@{
    ViewBag.Title = "RegistroActividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Actividades / </span> Registro Actividad </h4>

<div class="card mb-4">
    <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Ingresar una nueva actividad </h5>
    <div class="card-body">
        @if (ViewBag.msj != null)
        {
            <div class="alert alert-secondary" style="text-align:center" role="alert">
                @ViewBag.msj
            </div>
        }
        @using (Html.BeginForm("RegistroActividades", "Actividades", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        @Html.Label("Proyecto")
                        @Html.DropDownListFor(m => m.ID_PROYECTO, new SelectList(ViewBag.proyectoEMList, "Value", "Text"), "Selecciona un proyecto..", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        @Html.Label("Total horas")
                        @Html.TextBoxFor(m => m.TOTAL_HORAS, new { @class = "form-control", @required = "True" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        @Html.Label("Fecha Inicio")
                        @Html.TextBoxFor(m => m.FECHA_INICIO, new { @class = "form-control", @type = "date", @required = "True" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        @Html.Label("Fecha Final")
                        @Html.TextBoxFor(m => m.FECHA_FIN, new { @class = "form-control", @type = "date", @required = "True" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        @Html.Label("Detalle")
                        @Html.TextAreaFor(m => m.DETALLE, new { @class = "form-control" })
                    </div>
                </div>
                @Html.HiddenFor(m => m.EMPLEADO_ID)
                @Html.HiddenFor(m => m.ESTADO)
            </div>

            <div style="display:grid; place-items:center;">
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Registrar Actividad </button>
                </div>
            </div>


        }
    </div>
</div>

<!-- Bootstrap JS and Popper.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>

