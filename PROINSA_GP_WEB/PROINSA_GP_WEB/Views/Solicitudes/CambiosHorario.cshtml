@model PROINSA_GP_WEB.Entidad.Solicitud

@{
    ViewBag.Title = "CambiosHorario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Desarrollo personal / Solicitudes / Crear una solicitud / </span> Registrar permiso </h4>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="card mb-4">
                <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Datos para la gestión del permiso:</h5>
                <div class="card-body">
                    @using (Html.BeginForm("CambiosHorario", "Solicitudes", FormMethod.Post))
                    {
                        <div class="col-md-4">
                            <div class="mb-3">
                                @Html.TextBoxFor(m => m.SOLICITANTE_ID, new { @class = "form-control", @hidden = "true" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.Label("Horario Actual:")
                                @Html.TextBoxFor(m => m.HORARIO, new { @class = "form-control", @type = "string", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.Label("Horario Nuevo:")

                                @Html.DropDownListFor(m => m.ID_HORARIOLABORAL, new SelectList(ViewBag.HorarioDisponibleList, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Comentario:")
                                    @Html.TextAreaFor(m => m.COMENTARIO, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Detalle:")
                                    @Html.TextAreaFor(m => m.DETALLE, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div style="display:grid; place-items:center;">
                            <div class="mt-4">
                                <button class="btn btn-primary mt-4 toastBtn" style="width:300px" type="submit" data-toast-id="btnCambioHorario">Registrar</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        var toastButtons = document.querySelectorAll('.toastBtn');
        toastButtons.forEach(button => {
            button.addEventListener('click', function () {
                var toastId = this.getAttribute('data-toast-id');
                localStorage.setItem('showToastId', toastId);
                window.location.href = '/Home/Principal';
            });
        });
    });
</script>