@using System.Data

@model System.Data.DataTable
@{
    ViewBag.Title = "HistorialSolicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Desarrollo personal / Solicitudes / </span> Historial solicitudes</h4>

<div class="card mb-4">
    <h5 class="card-header">Prueba por si quieren usar este fondo blanco</h5>
</div>

<div class="card-body">

    <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Historial Solicitudes:</h5>


    <div class="tab-content">
        <div class="tab-pane show active" id="striped-rows-preview">
            <div class="table-responsive-sm">
                <table class="table table-striped table-centered mb-0">
                    <thead>
                        <tr>
                            <th>FECHA SOLICITUD</th>
                            <th>TIPO SOLICITUD</th>
                            <th>ESTADO</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["FECHA_SOLICITUD"]</td>
                                <td>@row["DESCRIPCION"]</td>
                                <td>@row["ESTADO"]</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div> <!-- end table-responsive-->
        </div> <!-- end preview-->


    </div> <!-- end tab-content-->
</div>
