@{
    ViewBag.Title = "GestionDocumentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Documentos y anauncios / Gestion de Documentos / Crear un documento / </span> Documento Plano </h4>


<div class="container">
    <form class="row g-3">
        <div class="mb-3">
            <label for="formFile" class="form-label">Elegir archivo</label>
            <input class="form-control" type="file" id="formFile">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Descripción: </label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-primary">Subir</button>
        </div>
    </form>
</div>