
@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout_Inicio.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="index.html" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">                                
                                <img src="~/assets/img/empresa/Logo_Sin_Letras.png" />
                            </span>
                            <span class="app-brand-text demo text-body fw-bolder">Proinsa</span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <div style="display: grid; place-items: center;">
                        <h2 class="mb-2">Iniciar Sesión</h2>
                        
                    </div>                    
                    @if (ViewData.Keys.Contains("mensaje"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["mensaje"]
                        </div>
                    }
                    @if (ViewBag.MensajePantalla != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.MensajePantalla
                        </div>                        
                    }
                    <form id="formAuthentication" class="mb-3" action="index.html" method="POST">
                        <div class="mb-3">
                            <h4><center>Creamos el futuro, hoy</center></h4>
                        </div>

                       
                        <div class="mb-3">
                            
                            <a class="btn btn-primary d-grid w-100" asp-action="LoginExterno" asp-route-proveedor="Microsoft">Continuar con Microsoft</a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
<script src="~/js/enlacesTemporales.js"></script>
