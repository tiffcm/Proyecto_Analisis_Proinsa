@model PROINSA_GP_WEB.Entidad.AprobacionDetalle;

@{
    ViewBag.Title = "ConsultarAprobDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Desarrollo personal / Solicitudes / Crear una solicitud / </span> Registrar permiso </h4>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="card mb-4">
                <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Datos para la gestión del permiso:</h5>
                <div class="card-body">
                    @using (Html.BeginForm("ConsultarAprobDetalle", "Solicitudes", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.ID_SOLICITUD)
                        <div class="col-md-4">
                            <div class="mb-3">
                                @Html.TextBoxFor(m => m.ID_EMPLEADO, new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.Label("Tipo de Permiso:")
                                @Html.TextBoxFor(m => m.TIPOPERMISO, new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="mb-3">
                                    @Html.Label("Fecha Inicio:")
                                    @Html.TextBoxFor(m => m.FECHA_INICIO, new { @class = "form-control", @type = "date", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    @Html.Label("Fecha Final:")
                                    @Html.TextBoxFor(m => m.FECHA_FINAL, new { @class = "form-control", @type = "date", @readonly = "true" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    @Html.Label("Dias:")
                                    @Html.TextBoxFor(m => m.DIAS, new { @class = "form-control", @type = "date", @readonly = "true" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Comentario:")
                                    @Html.TextAreaFor(m => m.COMENTARIO, new { @class = "form-control", @readonly = "true" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Detalle:")
                                    @Html.TextAreaFor(m => m.DETALLE, new { @class = "form-control", @readonly = "true" })

                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.Label("Justificacion:")
                                @* @Html.TextAreaFor(m => m., new { @class = "form-control" }) *@ <!-- AGREGAR JUSTIFICACION EN LA ENTIDAD Y SQL-->

                            </div>
                        </div>
                        <div style="display:grid; place-items:center;">
                            <button class="btn btn-primary mt-4 " style="width:300px" type="submit" id="submitButton">Rechazar</button>
                            <button class="btn btn-primary mt-4 " style="width:300px" type="submit" id="submitButton">Aprobar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
