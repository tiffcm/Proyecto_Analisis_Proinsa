@model PROINSA_GP_WEB.Entidad.AprobacionViewModel

@{
    ViewBag.Title = "ConsultarAprobDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Desarrollo personal / Solicitudes / Crear una solicitud / </span> Registrar permiso </h4>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="card mb-4">
                <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Datos para la gestión del permiso:</h5>
                <div class="card-body">
                    @if (Model.AprobacionDetalles != null)
                    {
                        foreach (var item in Model.AprobacionDetalles)
                        {
                            @using (Html.BeginForm("Aprobaciones", "Aprobaciones", FormMethod.Post))
                            {
                                @Html.HiddenFor(m => item.ID_SOLICITUD)
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Identificación del empleado")
                                            @Html.TextBoxFor(m => item.ID_EMPLEADO, new { @class = "form-control", @readonly = "true" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Tipo de Permiso:")
                                            @Html.TextBoxFor(m => item.TIPOPERMISO, new { @class = "form-control", @readonly = "true" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Horario actual:")
                                            @Html.TextBoxFor(m => item.HORARIO_ACTUAL, new { @class = "form-control", @type = "text", @readonly = "true" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Horario nuevo:")
                                            @Html.TextBoxFor(m => item.HORARIO_NUEVO, new { @class = "form-control", @type = "text", @readonly = "true" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Comentario:")
                                            @Html.TextAreaFor(m => item.COMENTARIO, new { @class = "form-control", @readonly = "true" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            @Html.Label("Detalle:")
                                            @Html.TextAreaFor(m => item.DETALLE, new { @class = "form-control", @readonly = "true" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        @Html.Label("Justificacion:")
                                        @Html.TextAreaFor(m => item.JUSTIFICACION, new { @class = "form-control", @required = "true" })
                                    </div>
                                </div>
                                <div style="text-align:center;">
                                    <button class="btn btn-primary mt-4" style="width:300px" type="submit" id="submitButton">Rechazar</button>
                                    <button class="btn btn-primary mt-4" style="width:300px" onclick="setRespuesta('A')" type="submit" id="submitButton">Aprobar</button>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <p>No hay solicitudes pendientes de aprobación</p>
                    }
                </div>
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#dataTable2" aria-expanded="false" aria-controls="dataTable2">
                    Flujo de aprobaciones
                </button>
                <div class="collapse" id="dataTable2">
                    <div class="d-grid d-sm-flex p-3 border">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 w-100">
                            <div class="row justify-content-center">
                                <div class="col-12">
                                    <div class="table-responsive-sm">
                                        @if (Model.AprobacionFlujos != null)
                                        {
                                            <table id="dataTable" class="table table-bordered dataTable text-center" cellspacing="0" role="grid" aria-describedby="dataTable_info">
                                                <thead>
                                                    <tr>
                                                        <th>ID SOLICITUD</th>
                                                        <th>FECHA SOLICITUD</th>
                                                        <th>ID_EMPLEADO</th>
                                                        <th>SOLICITANTE</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.AprobacionFlujos)
                                                    {
                                                        <tr>
                                                            <td>@item.SECUENCIA</td>
                                                            <td>@item.DEPARTAMENTO</td>
                                                            <td>@item.NOMBRE_ENCARGADO</td>
                                                            <td>@item.RESPUESTA_SOLICITUD</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <p>No hay solicitudes pendientes de aprobación</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function setRespuesta(respuesta) {
        document.getElementById('respuestaSolicitud').value = respuesta;
    }
</script>