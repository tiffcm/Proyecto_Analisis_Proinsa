@model PROINSA_GP_WEB.Entidad.IngresosDeduccionesDetalle

@{
    ViewBag.Title = "ActualizarDeduccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administrativo / Nómina /</span> Registrar ingresos Nómina</h4>
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="card mb-4">
                <h5 class="card-header" style="color: #DD3333; text-transform:uppercase;">Actualizar datos de la nómina de este mes:</h5>
                <div class="card-body">
                    @using (Html.BeginForm("ActualizarDeduccion", "Nominas", FormMethod.Post))
                    {
                        <!-- Formulario inicial -->
                        @Html.HiddenFor(m => m.CONSECUTIVO)
                        @Html.HiddenFor(m => m.TIPO_ID)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Nombre empleado:")
                                    @Html.TextBoxFor(m => m.NOMBRE_EMPLEADO, new { @class = "form-control", @type = "text", @required = "true", @style = "text-align:center;", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.Label("Nombre tipo:")
                                    @Html.TextBoxFor(m => m.NOMBRE_TIPO, new { @class = "form-control", @type = "text", @required = "true", @style = "text-align:center;", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    @Html.Label("Monto:")
                                    @Html.TextBoxFor(m => m.MONTO, new { @class = "form-control", @type = "text", onkeypress = "return ValidarNumeros(event)", @required = "true", @style = "text-align:center;" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    @Html.Label("Detalle:")
                                    @Html.TextBoxFor(m => m.DETALLE, new { @class = "form-control", @type = "text", @required = "true", @style = "text-align:center;" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3" style="text-align:center;">
                                    <button class="btn btn-success mt-4" style="width:300px" type="submit">Actualizar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/validacionesnumeros.js"></script>