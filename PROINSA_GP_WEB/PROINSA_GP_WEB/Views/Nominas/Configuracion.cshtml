
@{
    ViewBag.Title = "Configuracion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Administrativo / Nómina /</span> Configuración</h4>

<div class="card mb-4">
    <h5 class="card-header">Prueba por si quieren usar este fondo blanco</h5>
</div>

<h4 class="page-title">Configuración Parametros de Nómina</h4>

<div class="tab-content">
    <div class="tab-pane show active" id="floating-preview">
        <div class="row">
            <div class="col-lg-6">


                <div class="mb-3">
                    <label for="simpleinput" class="form-label">ID</label>
                    <input type="number" id="simpleinput" class="form-control" readonly value="1">
                </div>
                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Descripción</label>
                    <input type="text" id="simpleinput" class="form-control" value="Nómina-Abril 2024">
                </div>
                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Periodo</label>
                    <input type="text" id="simpleinput" class="form-control" value="04-2024" readonly>
                </div>

                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Fecha Cálculo</label>
                    <input type="date" id="simpleinput" class="form-control" value="2024-04-29" readonly>
                </div>

                <div class="mb-3">

                    <button type="submit" class="btn btn-primary">Procesar</button>
                </div>


            </div>

            <div class="col-lg-6">



                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Fecha Pago</label>
                    <input type="date" id="simpleinput" class="form-control" value="2024-04-30" readonly>
                </div>

                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Observaciones</label>
                    <input type="text" id="simpleinput" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Revisiones</label>
                    <input type="number" id="simpleinput" value="1" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="simpleinput" class="form-label">Tipo Nómina</label>
                    <select class="form-select" id="example-select">
                        <option>Mensual</option>

                    </select>
                </div>



            </div>
        </div>
    </div>
</div>