@{
    ViewBag.Title = "DownloadReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Reportes / </span> Descargar reportes </h4>

<div class="table-responsive text-nowrap">
    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Reporte</th>
                <th>Acciones</th>
                <th>Descargar</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Reporte de Empleados</td>
                <td>
                    <button type="submit" name="reportName" value="ReporteProyectos" class="btn btn-primary">Previsualizar</button>
                    @*                     <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal_@item.ID_EMPLEADO" asp-action="ReporteProyectos" asp-route-Id="@item.ID_EMPLEADO">Previsualizar</a> HAY QUE AGREGAR EL ID DEL EMPLEADO
                    *@
                     <!-- Modal -->
                    
                </td>
                <td>
                    <form asp-controller="Report" asp-action="DownloadReportPdf" method="get" style="display:inline;">
                        <button type="submit" name="reportName" value="ReporteEmpleados" class="btn btn-primary">PDF</button>
                    </form>
                    <form asp-controller="Report" asp-action="DownloadReportExcel" method="get" style="display:inline;">
                        <button type="submit" name="reportName" value="ReporteEmpleados" class="btn btn-success">Excel</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Reporte de Proyectos</td>
                <td>
                    <button type="submit" name="reportName" value="ReporteProyectos" class="btn btn-primary">Previsualizar</button>
                    @*                     <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalUsuario_@item.ID_EMPLEADO" asp-action="ReporteProyectos" asp-route-Id="@item.ID_EMPLEADO">Previsualizar</a> HAY QUE AGREGAR EL ID DEL EMPLEADO
                    *@                    
                     <!-- Modal -->
                    
                </td>
                <td>
                    <form asp-controller="Report" asp-action="DownloadReportPdf" method="get" style="display:inline;">
                        <button type="submit" name="reportName" value="ReporteProyectos" class="btn btn-primary">PDF</button>
                    </form>
                    <form asp-controller="Report" asp-action="DownloadReportExcel" method="get" style="display:inline;">
                        <button type="submit" name="reportName" value="ReporteProyectos" class="btn btn-success">Excel</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>


